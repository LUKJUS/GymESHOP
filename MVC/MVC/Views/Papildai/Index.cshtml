@model IEnumerable<MVC.Models.Product>

@* this will also be used as page title in main layout *@
@{
	ViewData["title"] = "Remėjai";
}

@* content itself *@
<div class="main-content-lst d-flex justify-content-center">
	<table class="entity-list">
		<tbody>
			@foreach (var item in Model)
			{
				<div class="thumbnail col-sm-4 col-lg-4 col-md-4">
					<img src="@Url.Content(item.Img)" style="width:300px; height:300px;" />
					<div class="caption">
						<h3 class="pull-right">@Html.DisplayFor(model => item.Name)</h3>
					</div>
					<h3>
						<a>@Html.DisplayFor(model => item.Type)</a>
					</h3>
					<h3>
						<a>@Html.DisplayFor(model => item.Price)</a>
					</h3>
				</div>
			}
		</tbody>
	</table>
</div>
