@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Salonas.MarsrutasCE

@* This will also be used as page title in main layout *@
@{ ViewData["title"] = "Marsruto redagavimas"; }

@* Content header *@
<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sąrašą
        </a>
    </span>
</div>

@* Content itself *@
<div class="main-content-ced">
    @using (Html.BeginForm(FormMethod.Post, new { @class = "entity-ce" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Add hidden form fields for non-visible properties, otherwise they will get lost in code that handles button presses *@
        @Html.HiddenFor(m => m.Marsrutas.Id)

        <fieldset>

            <div class="form-group">
                @Html.LabelFor(m => m.Marsrutas.PradineVieta)
                @Html.EditorFor(m => m.Marsrutas.PradineVieta)
                @Html.ValidationMessageFor(m => m.Marsrutas.PradineVieta, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Marsrutas.PaskirtiesVieta)
                @Html.EditorFor(m => m.Marsrutas.PaskirtiesVieta)
                @Html.ValidationMessageFor(m => m.Marsrutas.PaskirtiesVieta, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Marsrutas.Atstumas)
                @Html.EditorFor(m => m.Marsrutas.Atstumas)
                @Html.ValidationMessageFor(m => m.Marsrutas.Atstumas, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Marsrutas.Trukme)
                @Html.EditorFor(m => m.Marsrutas.Trukme)
                @Html.ValidationMessageFor(m => m.Marsrutas.Trukme, "")
            </div>
        </fieldset>

        <div class="container-fluid d-flex d-row justify-content-end">
            <button name="save" value="1" class="btn btn-success">
                <i class="fa-solid fa-floppy-disk"></i> Išsaugoti
            </button>
        </div>
    }
</div>

@* Content footer *@
<div class="main-content-footer">
    <span class="title"></span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sąrašą
        </a>
    </span>
</div>
