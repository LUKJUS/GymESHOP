@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Krovinys.KrovinysCE

@{ ViewData["title"] = "Krovinio sukūrimas"; }

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sąrašą
        </a>
    </span>
</div>

<div class="main-content-ced">
    @using(Html.BeginForm(FormMethod.Post, new { @class = "entity-ce" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <fieldset>
            <div class="form-group">
                @Html.LabelFor(m => m.Krovinys.Miestas)
                @Html.EditorFor(m => m.Krovinys.Miestas)
                @Html.ValidationMessageFor(m => m.Krovinys.Miestas, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Krovinys.Svoris)
                @Html.EditorFor(m => m.Krovinys.Svoris)
                @Html.ValidationMessageFor(m => m.Krovinys.Svoris, "")
            </div>
			<div class="form-group">
				@Html.LabelFor(m => m.Krovinys.PristatymoBusena)
				@Html.DropDownListFor(m => m.Krovinys.PristatymoBusena, Model.List.PristatymoBusena, (string)ViewData["none-chosen"])
				@Html.ValidationMessageFor(m => m.Krovinys.PristatymoBusena, "")
		    </div>
			<div class="form-group">
				@Html.LabelFor(m => m.Krovinys.fkMarsrutas)
				@Html.DropDownListFor(m => m.Krovinys.fkMarsrutas, Model.List.MarsrutoList, (string)ViewData["none-chosen"])
				@Html.ValidationMessageFor(m => m.Krovinys.fkMarsrutas, "")
		    </div>
            <div class="form-group">
				@Html.LabelFor(m => m.Krovinys.fkTransportoPriemone)
				@Html.DropDownListFor(m => m.Krovinys.fkTransportoPriemone, Model.List.TransportoPriemone, (string)ViewData["none-chosen"])
				@Html.ValidationMessageFor(m => m.Krovinys.fkTransportoPriemone, "")
		    </div>			
        </fieldset>

        <div class="container-fluid d-flex d-row justify-content-end">
            <button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
        </div>
    }
</div>

<div class="main-content-footer">
    <span class="title"></span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sąrašą
        </a>
    </span>
</div>
