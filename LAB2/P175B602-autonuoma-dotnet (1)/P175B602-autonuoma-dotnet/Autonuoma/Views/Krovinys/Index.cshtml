@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.Krovinys.KrovinysL>

@{
	ViewData["title"] = "Krovinys";
}

<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

<div class="main-content-lst">
	<table class="entity-list">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Miestas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Svoris)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.PristatymoBusena)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Id)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.fkMarsrutas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.fkTransportoPriemone)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(model => item.Miestas)
					</td>
					<td>
						@Html.DisplayFor(model => item.Svoris)
					</td>
					<td>
						@Html.DisplayFor(model => item.PristatymoBusena)
					</td>
					<td>
						@Html.DisplayFor(model => item.Id)
					</td>
					<td>
						@Html.DisplayFor(model => item.fkMarsrutas)
					</td>
					<td>
						@Html.DisplayFor(model => item.fkTransportoPriemone)
					</td>

					<td>
						<a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary"><i
								class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
						<a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><i
								class="fa-solid fa-trash"></i> Šalinti</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
